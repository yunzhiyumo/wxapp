<template name="postItem">
  <view class='post-container'>
      <view class='avatar'>
        <image class='post-avatar' src='{{author_img}}'></image>
        <text class='post-date'>{{date}}\t{{index}}</text>
      </view>
      <text class='post-title'>{{title}}</text>
      <image wx:if="{{img_condition}}" class='post-image' src='{{post_img}}'></image>
      <text class='post-content'>{{content}}</text>
      <view class='post-like'>
        <image class='post-like-image' src='../../images/icon/chat.png'></image>
        <text class='post-like-text'>{{view_num}}</text>
        <image class='post-like-image' src='../../images/icon/view.png'></image>
        <text class='post-like-text'>{{collect_num}}</text>
      </view>
    </view>
</template>